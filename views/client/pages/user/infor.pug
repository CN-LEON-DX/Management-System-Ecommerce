extends ../../layouts/default.pug
include ../../mixins/product-layout.pug
include ../../mixins/alert.pug

block main
  +alert-error()
  +alert-success()
  .container.mx-auto.p-4.mb-6.h-screen
    h2.text-2xl.font-semibold.mb-6.text-center User Information

    .user-info-card.bg-white.shadow-md.rounded-lg.p-6
      .flex.items-center.mb-4
        if (user.avatar)
          img(src=user.avatar, alt="User Avatar", class="w-24 h-24 rounded-full mr-4")
        else0
          i(class="fa-solid fa-user text-gray-400 w-24 h-24 mr-4 text-5xl")
        .user-details
          h3.text-xl.font-bold= user.fullName
          p.text-gray-600= user.email
          p.text-gray-600= user.address

      .additional-info
        p.text-gray-600.mb-2
          | Phone: #{user.phone || 'N/A'}
        p.text-gray-600.mb-2
          | Date of Birth: #{user.dateOfBirth || 'N/A'}
        // Add more fields as necessary

      // Edit button
      .flex.justify-center.mt-6
        a(href="/user/edit", class="bg-blue-500 text-white font-bold py-2 px-4 rounded") Edit Info
