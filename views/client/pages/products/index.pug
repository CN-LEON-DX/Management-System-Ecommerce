extends ../../layouts/default.pug

block main
  .container.mx-auto.p-4
    h2.text-2xl.font-semibold.mb-8.mt-4 Danh sách sản phẩm
    div(class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4")
      each product in products
        .bg-white.shadow-lg.rounded-lg.overflow-hidden
          img(src=product.thumbnail alt=product.title class="w-auto h-48 object-cover" imageProduct data-slug=product.slug)
          .p-4
            h2.text-lg.font-semibold.mb-2.text-ellipsis.line-clamp-1(titleProduct data-slug=product.slug) #{product.title}
            p.text-gray-600.text-ellipsis.line-clamp-3 #{product.description}
            p.text-lg.font-bold.mt-2 Price: #{product.newPrice}$
            p.text-sm.text-gray-500.line-through #{product.price}$
            span(class="p-2 bg-zinc-500 text-white rounded-full mt-2 inline-block text-center w-full") Discount: #{product.discountPercentage}%

  script(src="/client/js/list-product.js") 