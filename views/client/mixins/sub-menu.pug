mixin sub-menu(items, path)
  ul(class="hidden absolute bg-white shadow-lg rounded-lg group-hover:block space-y-2 mt-2")
      each item in items
          li.relative.group
              a(href=`${path}/${item.slug}` class="block px-4 py-2 text-black hover:bg-gray-100")= item.title
              if item.children && item.children.length > 0
                  ul(class="hidden group-hover:block absolute bg-white shadow-lg rounded-lg mt-2 left-full top-0")
                      +sub-menu(item.children, `${path}/${item.slug}`)