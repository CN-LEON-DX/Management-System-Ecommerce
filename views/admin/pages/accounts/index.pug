extends ../../layouts/default.pug
include ../../mixins/tableCategory.pug
include ../../mixins/alert.pug
include ../../partials/sider.pug
block main
    +alert-error()
    +alert-success()
    div(class="flex")
        +sider()
        div(class="list-product flex-grow p-4 relative")
            h2(class="title text-2xl font-bold mb-4") List account

            //- table list category
            table(class="min-w-full table-auto")
                thead
                    tr(class="bg-gray-200 text-left")
                        th(class="p-2") Number
                        th(class="p-2") Avatar
                        th(class="p-2") Name
                        th(class="p-2") Email
                        th(class="p-2") Role
                        th(class="p-2") Status
                        th(class="p-2") Action
                tbody
                    each account, index in accounts
                        tr
                            td(class="p-4")= index+1
                            td(class="p-2")
                                img(src=`${account.avatar}` alt="avatar" class="h-4 w-4 object-cover rounded-full")

                            td(class="p-4")= account.fullName
                            td(class="p-4")= account.email
                            td(class="p-4")= roleMap[account.roleID]
                            if account.status === 'active'
                                td(class="p-4 text-green-700")= account.status
                            else
                                td(class="p-4 text-red-700")= account.status
                            td(class="p-2")
                                a(href=`${prefixAdmin}/accounts/edit/${account._id}` class="bg-slate-700 text-white px-4 py-2 rounded" style="margin-right: 5px") Edit
                                a(href=`${prefixAdmin}/accounts/delete/${account._id}` class="bg-red-500 text-white px-4 py-2 rounded ") Delete
                            

            div(class="col-span-2 absolute right-[20px] top-[20px] hover:bg-red-600")
                a(href=`${prefixAdmin}/accounts/create` class="bg-slate-700 text-white px-4 py-2 rounded") New account
