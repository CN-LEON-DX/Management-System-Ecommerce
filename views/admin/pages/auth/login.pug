include ../../mixins/loginAlert.pug

doctype html
html
  head
    title Login Page
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")

  body(class="h-screen bg-gradient-to-r from-purple-600 to-pink-500 text-white flex items-center justify-center")

    //- Alert mixins
    +alert-success() 
    +alert-error()   

    //- Main login form
    div(class="bg-gray-900 bg-opacity-80 rounded-lg p-8 shadow-lg w-full max-w-sm")
      h1(class="text-2xl font-bold mb-6 text-center") Login

      //- Form starts here
      form(method="POST" action=`${prefixAdmin}/auth/login`)
        div(class="mb-4")
          label(for="email" class="block text-sm font-medium mb-2") Email
          input(type="email" id="email" name="email" class="w-full p-2 border border-gray-700 rounded-lg bg-gray-800 focus:outline-none focus:border-pink-500 text-white")

        div(class="mb-4")
          label(for="password" class="block text-sm font-medium mb-2") Password
          input(type="password" id="password" name="password" class="w-full p-2 border border-gray-700 rounded-lg bg-gray-800 focus:outline-none focus:border-pink-500 text-white")

        button(type="submit" class="w-full bg-pink-600 hover:bg-pink-700 text-white font-bold py-2 px-4 rounded-lg mt-4") Log In

    script(src="/admin/js/login.js")
